<?xml version="1.0" encoding="UTF-8"?>
<!-- Solution: Module 5, Exercise 10 â€” Refactored Implementation
     Based on Module 4 Cycle 9, with Scatter-Gather merge extracted
     to external dwl/enrich-merge.dwl using customer-utils module. -->
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:db="http://www.mulesoft.org/schema/mule/db"
      xmlns:wsc="http://www.mulesoft.org/schema/mule/wsc"
      xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
      xsi:schemaLocation="
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
        http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
        http://www.mulesoft.org/schema/mule/wsc http://www.mulesoft.org/schema/mule/wsc/current/mule-wsc.xsd
        http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">

    <!-- ================================================================ -->
    <!-- Main implementation flow for GET /customers/{customerId}         -->
    <!-- Final state: all 9 cycles applied                                -->
    <!-- ================================================================ -->
    <flow name="get-customer-implementation">
        <!-- Cycle 2: Extract customerId from URI parameter -->
        <set-variable variableName="customerId"
                      value="#[attributes.uriParams.customerId]"
                      doc:name="Set customerId"/>

        <!-- Cycle 2: Log the incoming request -->
        <logger level="INFO"
                message="#['Processing customer: ' ++ vars.customerId]"
                doc:name="Log customerId"/>

        <!-- Cycle 9: Wrap business logic in Try scope for error handling -->
        <try doc:name="Error handling wrapper">

            <!-- Cycle 8: Choice router for conditional source selection -->
            <choice doc:name="Route by source">

                <!-- REST only -->
                <when expression="#[attributes.queryParams.source == 'rest']">
                    <flow-ref name="get-enrichment-data" doc:name="REST only"/>
                    <ee:transform doc:name="Format REST response">
                        <ee:message>
                            <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    customerId: vars.customerId,
    company: payload.companyName,
    industry: payload.industry,
    employees: payload.employeeCount,
    revenue: payload.revenue
}]]></ee:set-payload>
                        </ee:message>
                    </ee:transform>
                </when>

                <!-- DB only -->
                <when expression="#[attributes.queryParams.source == 'db']">
                    <flow-ref name="get-customer-score" doc:name="DB only"/>
                    <ee:transform doc:name="Format DB response">
                        <ee:message>
                            <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    customerId: vars.customerId,
    score: payload[0].score,
    segment: payload[0].segment
}]]></ee:set-payload>
                        </ee:message>
                    </ee:transform>
                </when>

                <!-- SOAP only -->
                <when expression="#[attributes.queryParams.source == 'soap']">
                    <flow-ref name="validate-address" doc:name="SOAP only"/>
                    <ee:transform doc:name="Format SOAP response">
                        <ee:message>
                            <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    customerId: vars.customerId,
    addressValid: payload.body.ValidateAddressResponse.isValid,
    addressConfidence: payload.body.ValidateAddressResponse.confidence
}]]></ee:set-payload>
                        </ee:message>
                    </ee:transform>
                </when>

                <!-- Default: all sources in parallel (Cycle 7) -->
                <otherwise>
                    <scatter-gather doc:name="Parallel Enrichment">
                        <route>
                            <!-- Route 0: REST enrichment -->
                            <flow-ref name="get-enrichment-data" doc:name="REST enrichment"/>
                        </route>
                        <route>
                            <!-- Route 1: Database score -->
                            <flow-ref name="get-customer-score" doc:name="DB score"/>
                        </route>
                        <route>
                            <!-- Route 2: SOAP address validation -->
                            <flow-ref name="validate-address" doc:name="SOAP address"/>
                        </route>
                    </scatter-gather>
                    <!-- Module 5, Exercise 10: External DW file with reusable module imports -->
                    <ee:transform doc:name="Merge all sources">
                        <ee:message>
                            <ee:set-payload resource="dwl/enrich-merge.dwl" />
                        </ee:message>
                    </ee:transform>
                </otherwise>
            </choice>

            <!-- Cycle 9: Error handlers -->
            <error-handler>
                <!-- 404: Customer not found -->
                <on-error-continue type="HTTP:NOT_FOUND"
                                   enableNotifications="false"
                                   logException="false">
                    <ee:transform doc:name="404 Response">
                        <ee:message>
                            <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    error: "Customer not found",
    customerId: vars.customerId
}]]></ee:set-payload>
                        </ee:message>
                    </ee:transform>
                    <set-variable variableName="httpStatus" value="404" doc:name="Set 404"/>
                </on-error-continue>

                <!-- 503: Service unavailable (any connectivity error) -->
                <on-error-continue type="HTTP:CONNECTIVITY, DB:CONNECTIVITY, WSC:CONNECTIVITY"
                                   enableNotifications="false"
                                   logException="false">
                    <ee:transform doc:name="503 Response">
                        <ee:message>
                            <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    error: "Service unavailable",
    detail: error.description
}]]></ee:set-payload>
                        </ee:message>
                    </ee:transform>
                    <set-variable variableName="httpStatus" value="503" doc:name="Set 503"/>
                </on-error-continue>

                <!-- Catch-all: log and re-throw -->
                <on-error-propagate type="ANY">
                    <logger level="ERROR"
                            message="#['Unhandled error for customer ' ++ vars.customerId ++ ': ' ++ error.description]"
                            doc:name="Log unhandled error"/>
                </on-error-propagate>
            </error-handler>
        </try>
    </flow>

    <!-- ================================================================ -->
    <!-- Sub-flow: REST enrichment (Cycle 3)                              -->
    <!-- ================================================================ -->
    <sub-flow name="get-enrichment-data">
        <http:request config-ref="Enrichment_API" method="GET"
                      path="/enrich/{customerId}" doc:name="Call Enrichment API">
            <http:uri-params><![CDATA[#[{customerId: vars.customerId}]]]></http:uri-params>
        </http:request>
    </sub-flow>

    <!-- ================================================================ -->
    <!-- Sub-flow: Database score lookup (Cycle 4)                        -->
    <!-- ================================================================ -->
    <sub-flow name="get-customer-score">
        <db:select config-ref="PostgreSQL_Config" doc:name="Query customer score">
            <db:sql>SELECT score, segment, last_updated
                   FROM customer_scores
                   WHERE customer_id = :customerId</db:sql>
            <db:input-parameters><![CDATA[#[{customerId: vars.customerId}]]]></db:input-parameters>
        </db:select>
    </sub-flow>

    <!-- ================================================================ -->
    <!-- Sub-flow: SOAP address validation (Cycle 5)                      -->
    <!-- ================================================================ -->
    <sub-flow name="validate-address">
        <wsc:consume config-ref="Address_Validation"
                     operation="ValidateAddress"
                     doc:name="Validate Address">
            <wsc:message>
                <wsc:body><![CDATA[#[%dw 2.0
output application/xml
ns addr http://example.com/address
---
addr#ValidateAddress: {
    addr#street: "123 Innovation Drive",
    addr#city: "Austin",
    addr#state: "TX",
    addr#postalCode: "78701"
}]]]></wsc:body>
            </wsc:message>
        </wsc:consume>
    </sub-flow>

</mule>
